<h2>Sign up</h2>

<%= simple_form_for @user do |f| %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :profile_picture %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

